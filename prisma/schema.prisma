generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaybackPlan {
  Weekly
  Biweekly
  Monthly
  Yearly
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  name          String?
  password      String
  emailVerified Boolean?
  rememberToken String
  campaigns     Campaign[]
  createdAt     DateTime   @default(now())
}

model Campaign {
  id          String           @id @default(uuid())
  name        String
  description String?
  isActive    Boolean          @default(true)
  user        User             @relation(fields: [userId], references: [id])
  userId      String
  type        CampaignCategory @relation("CampaignType", fields: [typeId], references: [id])
  typeId      String
  subtype     CampaignCategory @relation("CampaignSubtype", fields: [subtypeId], references: [id])
  subtypeId   String
  goal        Int
  paybackTime Int
  paybackPlan PaybackPlan
  createdAt   DateTime         @default(now())
}

model CampaignCategory {
  id               String             @id @default(uuid())
  name             String
  parentId         String?
  parent           CampaignCategory?  @relation("CategoryParent", fields: [parentId], references: [id])
  children         CampaignCategory[] @relation("CategoryParent")
  typeCampaigns    Campaign[]         @relation("CampaignType")
  subtypeCampaigns Campaign[]         @relation("CampaignSubtype")
}
